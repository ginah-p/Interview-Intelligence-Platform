CREATE TABLE dim_topics(
    topic_key SERIAL PRIMARY KEY,
    topic_id VARCHAR(50) UNIQUE NOT NULL, /* Business key like 'DSA-ARRAYS-TP**/
    topic_name VARCHAR(100) NOT NULL,
    parent_topic_key INTEGER, /* Self-referential for hieriachy*/
    topic_level INTEGER, /* 1=Category (DSA), 2=Subcategory (Arrays), 3=Concept (Two Pointer)*/
    description TEXT,
    is_active BOOLEAN DEFAULT TRUE,
    created_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (parent_topic_key) REFERENCEs dim_topics(topic_key)

);